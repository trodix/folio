<div class="row">
    <div class="col-sm-12 col-md-10">
        {% for article in articles %}
            <div id="art-{{article.id}}" class="bg-faded">
                <article class="article row">
                    <div class="col-md-3 p-2">
                        <a class="hidden-sm-down" href="{{article.urlArticle}}" target="_blank">
                            <img class="art-picture" src="{{asset('uploads/articles/' ~ article.imageName)}}" alt="{{article.title}}">
                        </a>
                    </div>
                    <div class="col">
                        <h2 class="art-title">
                            <a href="{{article.urlArticle}}" target="_blank">{{article.title}}</a>
                        </h2>
                        <div class="art-header">
                            <div class="left">
                                <p>Cr√©e le {{article.createdAt|date("d/m/Y")}}</p>
                            </div>
                        </div>
                        <div class="article-description">
                            <p>{{article.body}}</p>
                        </div>  
                    </div>              
                </article>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div class="text-right mr-auto p-2">    
                        <a class="btn btn-warning" href="/veille/{{article.id}}/edit">Modifier</a>
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>

